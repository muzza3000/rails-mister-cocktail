<%= form_with(model: @cocktail, local: true, multipart: true) do |form| %>

<div class="mb-6 text-light bg-dark">
    <%= form.text_field :name, value: @cocktail.name, placeholder: "Cocktail name...", class: "form-control mb-2" %>

    <!-- <%= form.label :photo, class: "label" %> -->
    <div class="dropzone dropzone-default dz-clickable" data-controller="dropzone" data-dropzone-max-file-size="0.1" data-dropzone-max-files="1">
    <%= form.file_field :photo, direct_upload: true, data: { target: 'dropzone.input' } %>
      <div class="dropzone-msg dz-message needsclick ">
        <h3 class="dropzone-msg-title">Drag here to upload or click here to browse</h3>
        <span class="dropzone-msg-desc text-sm">2 MB file size maximum. Allowed file types png, jpg.</span>
      </div>
    </div>

  </div>

  <div class="mb-6">
    <%= form.submit "Create/Update", class: "btn btn-outline-secondary my-2" %>
  </div>

<% end %>
