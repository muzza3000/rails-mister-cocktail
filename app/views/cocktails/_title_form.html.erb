<%= simple_form_for(@cocktail, :html=> { class: 'bg-dark' }) do |f| %>
    <%= f.input :name, label: false  %>
    <%= f.input :photo, as: :file, label: false,  value: @cocktail.photo %>
    <% btn_text = @cocktail.id.nil? ? "Create Cocktail" : "Update Name" %>
    <%= f.button :submit, btn_text, class: 'btn btn-outline-secondary my-2'%>
<% end %>
