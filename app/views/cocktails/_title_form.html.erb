<%= simple_form_for(@cocktail, :html=> { multipart: true, class: 'bg-dark dropzone', id: "my-awesome-dropzone" }) do |f| %>
    <%= f.input :name, label: false  %>
    <% btn_text = @cocktail.id.nil? ? "Create Cocktail" : "Update Name" %>
    <%= f.button :submit, btn_text, id: 'submit-all', class: 'btn btn-outline-secondary my-2'%>
<% end %>
